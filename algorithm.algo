ALGORITHM problem
VAR 
langSent : INTEGER ;
nWords : INTEGER ;
nVowels : INTEGER ;
str : STRING ;
Vowels : ARRAY [6] ;

BEGIN
read (str) ;
Vowels:=["a" ,"e","i","o","u","y"] ;
langSent:= 0 ;
nWords:= 0 ;
nVowels:= 0 ;


For i from 0 to (str.length-1) do 
i+= 1 ;
if (str[i]=" "){
nWords += 1 ;
}

For j from 0 to 5 do 
if (Vowels[j] = str[i])
{
nVowels += 1 ;
}

END For
END For

END         

